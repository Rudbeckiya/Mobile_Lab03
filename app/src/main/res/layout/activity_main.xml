<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/creators_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/creators_name"
            android:textAlignment="center"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_For"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="@string/tv_For"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/input_text"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:text="@string/speakable_text"
            android:textSize="20sp"
            android:labelFor="@id/input_text"
            android:autofillHints="Natural or decimal number"/>

        <Spinner
            android:id="@+id/input_spinner"
            android:layout_width="wrap_content"
            android:layout_height="49dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_To"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="@string/tv_To"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/output_text"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/result"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/output_spinner"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/convert_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onConvert"
            android:text="@string/convert_btn"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>